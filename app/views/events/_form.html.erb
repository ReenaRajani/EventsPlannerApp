<% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
<div class="row">
  <div class="col-md-5 col-md-offset-3">
  <%= form_for(@event, class: "form-horizontal") do |f| %>

      <div class="form-group">
        <%= f.label :eventName %><br>
        <%= f.text_field :eventName, :autofocus => true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :occasion %>
        <%= f.text_field :occasion, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :eventdatetime %>
        <%= f.text_field :eventdate_time, :class => 'datepicker' %>
       
       <!-- if not using the datepicker jQuery Ui, use this 
        <%= f.datetime_select :eventdate_time, class: 'form-control', ampm: true , :minute_step => 15 , :start_year => 2015, :order => [:day, :month, :year], :class => 'datepicker' %>
         -->
      </div>
      <div class="form-group">
        <%= f.label :address %><br>
        <%= f.text_area :address , class: 'form-control'%>
      </div>
      <div class="form-group">
        <%= f.label :invitation %><br>
        <%= f.text_area :invitation, class: 'form-control' %>
      </div>
      <div class="col-md-4 col-md-offset-3">
        <%= f.submit :class=>'btn btn-submit' %>
      </div>
    <% end %>
  </div>
  
</div>

