
<!DOCTYPE html>
<html>
<head>
  <title>EventsPlanning</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="container">
    <div class="Header_nav">
      <ul class="nav navbar-nav">
        <li class="active"> <%= link_to "Home", root_path %> </li>
          
           <!-- If the user had logged on  -->
            <% if logged_in? %>
                Logged in as <strong><%= @current_user.name %></strong>.
                <% if @current_user.present? && @current_user.admin? %>
                  <li> <%= link_to('Users', users_path) %></li>
                <% end %>
                <li> <%= link_to('Edit Profile', edit_user_path(@current_user.id)) %> </li>
                <li> <%= link_to('Create Event', new_event_path(@current_user.id)) %> </li>
                <li> <%= link_to("log out", destroy_user_session_path, :method => :delete) %> </li>
              <!-- if the user has not logged on   -->
             <% else %>
                 <li> <%= link_to('Sign Up' , signup_path) %></li>
                 <li> <%= link_to('Log in', login_path) %></li>
             <% end %>
            </ul>

    </div>
    <div class="flash_messages"> 
    <% flash.each do |message_type , message|  %>
      <div class="alert-<%= message_type %>"> <%= message %></div>
      <% end %>
    </div>

    <%= yield %>
    <!-- Adding some debugging information to the site layout, we donâ€™t want to display debug information to users of a deployed application hence check for env.development? -->
    <%= debug(params) if Rails.env.development? %> 

  </div>
</body>
</html>
