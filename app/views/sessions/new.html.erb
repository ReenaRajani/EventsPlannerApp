<% provide(:title, "Log in ") %>
  <h2 class="form-signin-heading"> Login </h2>

<div class="row">
  <div class="col-md-4 col-md-offset-5">

      <%= form_for(:session, url: login_path , class: "form-signin form-horizontal") do |f| %>
      
        <div class="form-group">
          <%= f.label :email_id , class: "sr-only" %>
          <%= f.text_field :email_id , class: 'form-control' , placeholder: "Email address" ,required: "" , autofocus: ""%>
        </div>
        
        <div class="form-group">
          <%= f.label :password  , class: "sr-only" %>
          <%= f.password_field :password , class: 'form-control' , placeholder: "Password" , required: "" %>
        </div>

        <div>
          <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %> <span class="remember-me">Remember me </span>
          <% end  %>
        </div>

        <div class="col-md-4 col-md-offset-2">
          <%= f.submit "Login", class: "btn btn-lg btn-primary " %>
        </div>
      <% end %>      

       <p>New user?<%= link_to "Sign up now!", new_user_path %></p>

  </div>
</div>
